[Rewrite]
# 财新数据通
^https:\/\/entities\.caixin\.com\/api\/(dataplus\/promotionHints|public\/push\/appIndex|public\/recommendNews) reject-dict

# 广告样式
^https:\/\/gateway\.caixin\.com\/api\/app-api\/cxAdInfo\/selectIndexAdInfo reject-dict
^https:\/\/mappsv5\.caixin\.com\/channelv5\/article_ad_ios_info\.json reject-dict

# 文章中间推广、文章底部相关阅读
^https:\/\/gg\.caixin\.com\/s\?z=caixin&slot=\d+ reject-dict

# 首页弹出框
^https:\/\/msgapi\.caixin\.com\/msg_api\/annmsg\/annlist reject-dict

[Script]
# 财新数据通
http-response ^https:\/\/entities\.caixin\.com\/api\/dataplus\/columns script-path = https://raw.githubusercontent.com/Moli-X/Tool/X/Loon/Script/lodepuly/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除财新数据通广告

# 文章底部广告、搜索框填充词
http-response ^https:\/\/gateway\.caixin\.com\/api\/app-api\/(caixinapp\/appinfo|search\/getkeyword) script-path = https://raw.githubusercontent.com/Moli-X/Tool/X/Loon/Script/lodepuly/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除文末广告

# 财新FM
http-response ^https:\/\/gateway\.caixin\.com\/api\/app-content\/fm\/index\/list\? script-path = https://raw.githubusercontent.com/Moli-X/Tool/X/Loon/Script/lodepuly/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除财新FM广告

# 开屏广告、文章顶部横幅
http-response ^https:\/\/gg\.caixin\.com\/s\?z=caixin&op=\d script-path = https://raw.githubusercontent.com/Moli-X/Tool/X/Loon/Script/lodepuly/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除开屏广告

# 文章中间推广、文章底部相关阅读
http-response ^https:\/\/mappsv5\.caixin\.com\/articlev5\/\d+\/\d+\.json$ script-path = https://raw.githubusercontent.com/Moli-X/Tool/X/Loon/Script/lodepuly/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除正文广告
http-response ^https:\/\/mapps?v5\.caixin\.com\/(channelv5\/list|\/?index_page_v5\/)\w+ script-path = https://raw.githubusercontent.com/Moli-X/Tool/X/Loon/Script/lodepuly/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除正文广告

[MitM]
hostname = e*.caixin.com, g*.caixin.com, m*.caixin.com